{
  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:7209" // End point url of the api gateway
  },

  // He we configure our microservices routes
  "Routes": [
    {
      "UpstreamPathTemplate": "/user/index",
      "UpstreamHttpMethod": [ "GET" ],
      "DownstreamPathTemplate": "/api/user/index",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7150
        }
      ],
      "RateLimitOptions": {
        "EnableRateLimiting": true,
        "Period": "10s",
        "Limit": 3,
        "PeriodTimespan": 10
      }
    },
    {
      "UpstreamPathTemplate": "/user/index/{id}",
      "UpstreamHttpMethod": [ "GET" ],
      "DownstreamPathTemplate": "/api/user/index/{id}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7150
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/user/register",
      "UpstreamHttpMethod": [ "POST" ],
      "DownstreamPathTemplate": "/api/user/register",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7150
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/user/login",
      "UpstreamHttpMethod": [ "POST" ],
      "DownstreamPathTemplate": "/api/user/login",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7150
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/user/refresh-token",
      "UpstreamHttpMethod": [ "POST" ],
      "DownstreamPathTemplate": "/api/user/refresh-token",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7150
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/user/auth",
      "UpstreamHttpMethod": [ "GET" ],
      "DownstreamPathTemplate": "/api/user/auth",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7150
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    },
    {
      "UpstreamPathTemplate": "/user/authclient",
      "UpstreamHttpMethod": [ "GET" ],
      "DownstreamPathTemplate": "/api/user/authclient",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7150
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      },
      "RouteClaimsRequirement": {
        "Role": "Client"
      }
    },
    {
      "UpstreamPathTemplate": "/produit/{any}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT" ],
      "DownstreamPathTemplate": "/api/Catalogue/{any}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7137
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
      
    },
    {
      "UpstreamPathTemplate": "/panier/{any}",
      "UpstreamHttpMethod": [ "GET", "POST" ],
      "DownstreamPathTemplate": "/api/Panier/{any}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7275
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      },
      "RouteClaimsRequirement": {
        "Role": "Client"
      }
    }

